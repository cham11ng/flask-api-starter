{
  "pylint.path": [
    "~/.venv/bin/python",
    "-m",
    "pylint"
  ],
  "pylint.args": [
    "--max-line-length=120",
    "--logging-fstring-interpolation=fstr"
  ],
  "black-formatter.args": [
    "--line-length=120"
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.testing.pytestArgs": [
    "python"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "files.exclude": {
    "**/.git": true,
    "**/.pyc": true,
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.pytest": true,
    "**/.pytest_cache": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "cSpell.words": [
    "dotenv",
    "jsonify"
  ]
}
